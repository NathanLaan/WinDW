<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Custom="http://schemas.microsoft.com/winfx/2006/xaml/presentation/ribbon" x:Class="WinDW.MainWindow"
        Title="WinDW" Height="350" Width="525" MaxWidth="525" MaxHeight="350">
    <Grid>

        <Custom:Ribbon HorizontalAlignment="Left" VerticalAlignment="Top">
            <Custom:RibbonTab Header="Home" HorizontalAlignment="Left" Height="88" VerticalAlignment="Top" Width="515">
                <Custom:RibbonGroup Width="125" Height="88" Margin="0" VerticalAlignment="Top">
                    <Custom:RibbonButton Name="btnGeneratePassword" Label="Generate Password" Content="RibbonButton" HorizontalAlignment="Right" Height="32" Margin="0,2,-111,-34" VerticalAlignment="Top" Width="113" Click="RibbonButton_Click"/>
                </Custom:RibbonGroup>
            </Custom:RibbonTab>
            <Custom:RibbonTab Header="RibbonTab" HorizontalAlignment="Left" Height="88" VerticalAlignment="Top" Width="515">
                <Custom:RibbonGroup Header="RibbonGroup2" Height="88" Margin="0" Width="100"/>
            </Custom:RibbonTab>
        </Custom:Ribbon>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="181" Margin="0,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="517" FontSize="24"/>

    </Grid>
</Window>
